= form_for :contact, :url=>postmail_path do |f|
	- unless flash[:notice].blank?
		%h1.message.yeah= raw flash[:notice]
	- if @contact.errors.count > 0
		%h1.message.fail= raw t('register_fail')
	= f.email_field :mail, :class=>"mail", :placeholder=>t('mail_place_holder'), :required=>"required", :autofocus=>true
	&nbsp;&nbsp;
	%button.button{:type=>"submit", :value=>t('submit_val')}= t('submit')
= render 'shared/counter'